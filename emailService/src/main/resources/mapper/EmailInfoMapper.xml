<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lucas.emailservice.dao.mapper.EmailInfoMapper">
    <select id="selectEmailInfo" parameterType="String" resultType="com.lucas.emailservice.dao.entity.EmailInfo">
        select * from email_info where receiver_email=#{receiver_email}
    </select>

    <insert id="addEmailInfo" parameterType="com.lucas.emailservice.dao.entity.EmailInfo">
        insert into email_info(receiver_email, sender_email, subject) values(#{receiverEmail}, #{senderEmail}, #{subject})
    </insert>
</mapper>